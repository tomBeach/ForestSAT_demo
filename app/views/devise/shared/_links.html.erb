<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="dataRow">
        <div class="formLabel">Forgot your password?</div>
        <div class="formValue"><%= link_to "Reset Password", new_password_path(resource_name), class: "formLink" %></div>
    </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="dataRow">
        <div class="formLabel">Didn't receive instructions?</div>
        <div class="formValue"><%= link_to "Resend Instructions", new_confirmation_path(resource_name), class: "formLink" %></div>
    </div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "formLink" %>>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
