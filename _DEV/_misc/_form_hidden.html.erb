<!-- ======= abstracts new_form ======= -->

<%= form_for(@abstract, url: "/signup_abstract") do |f| %>

    <!-- ======= abstract categories ======= -->
    <%= fields_for :abstract do |abstract| %>
        <%= abstract.hidden_field :abs_title %>
        <%= abstract.hidden_field :abs_text %>
        <%= abstract.hidden_field :keyword_1 %>
        <%= abstract.hidden_field :keyword_2 %>
        <%= abstract.hidden_field :keyword_3 %>
        <%= abstract.hidden_field :invited %>
        <%= abstract.hidden_field :corr_author_id %>
        <%= abstract.hidden_field :pres_author_id %>
        <%= abstract.hidden_field :present_request %>
        <%= hidden_field_tag "admin_flag", @admin_flag.to_s %>
    <% end %>

    <!-- ======= primary author/affiliation ======= -->
    <%= fields_for :author do |author| %>
        <%= hidden_field_tag "author[firstnames][]" %>
        <%= hidden_field_tag "author[lastnames][]" %>
    <% end %>
    <%= fields_for :affiliation do |affiliation| %>
        <%= hidden_field_tag "affiliation[institutions][]" %>
        <%= hidden_field_tag "affiliation[departments][]" %>
    <% end %>
    <%= fields_for :abstract_author do |abstract_author| %>
        <%= hidden_field_tag "abstract_author[author_types][]" %>
    <% end %>

    <!-- ======= admin functions ======= -->
    <% if @admin_flag %>
        <%= fields_for :abstract do |abstract| %>

            <!-- ======= reviewers ======= -->
            <%= abstract.hidden_field :reviewer1_id %>
            <%= abstract.hidden_field :reviewer2_id %>
            <%= abstract.hidden_field :reviewer1_rec %>
            <%= abstract.hidden_field :reviewer2_rec %>
            <%= abstract.hidden_field :accepted %>
            <%= abstract.hidden_field :paper %>

            <!-- ======= presentation ======= -->
            <%= abstract.hidden_field :presentation_id %>
            <%= abstract.hidden_field :present_assigned %>
            <%= abstract.hidden_field :session_sequence %>
        <% end %>
    <% end %>

<% end %>

